<mvc:View controllerName="oj.movies.controller.App" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
						<Image
							src="images/MoviesHeader.png"
							width="100%"
							alt="Movies">
						</Image>
					</content>
					<footer>
						<OverflowToolbar>
							<ToolbarSpacer/>
							<Link
								text="{i18n>movieDatabaseLink}"
								enabled="true"
								target="_blank"
								width=""
								href="https://www.imdb.com/">
							</Link>
							<ToolbarSpacer/>
						</OverflowToolbar>
					</footer>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>