<mvc:View controllerName="oj.movies.controller.App" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns:unified="sap.ui.unified">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
						<Image src="images/MoviesHeader.png" width="100%" alt="Movies" press="sap.m.MessageToast.show('Do you feel like going to the movies?')"></Image>
						<f:SimpleForm id="form" editable="true" layout="ColumnLayout" title="Find Movies" columnsM="2" columnsL="3" columnsXL="3">
							<Label text="City" labelFor="city" />
							<SearchField id="city" showSearchButton="false" placeholder="Enter City" width="100%" />
							<Label text="Genre" labelFor="genre" />
							<Select id="genre" width="100%" selectedItem="Action">
								<core:ListItem icon="sap-icon://video" key="" text="All" />
								<core:ListItem icon="sap-icon://physical-activity" key="Action" text="Action" />
								<core:ListItem icon="sap-icon://electrocardiogram" key="Horror" text="Horror" />
								<core:ListItem icon="sap-icon://paper-plane" key="ScienceFiction" text="Science Fiction" />
							</Select>
							<Label />
							<Button text="Find Movies" class="sapUiSmallMarginTop" type="Emphasized" press="onPressFindMovies('city')" />
						</f:SimpleForm>
						<PlanningCalendar id="calendar" startDate="{path: 'movies>/initDate', formatter: '.formatter.formatDate'}" rows="{movies>/movies}" appointmentsVisualization="Filled">
							<toolbarContent>
								<Title text="Showtimes" titleStyle="H3" />
							</toolbarContent>
							<rows>
								<PlanningCalendarRow title="{movies>name}" text="{movies>name}" appointments="{path: 'movies>appointments', templateShareable: 'true'}">
									<appointments>
										<unified:CalendarAppointment startDate="{path: 'movies>startDate', formatter: '.formatter.formatDate'}" endDate="{path: 'movies>endDate', formatter: '.formatter.formatDate'}" title="{movies>cinemaName}" text="{movies>info}" icon="{movies>icon}" type="{movies>type}"></unified:CalendarAppointment>
									</appointments>
								</PlanningCalendarRow>
							</rows>
						</PlanningCalendar>
					</content>
					<footer>
						<OverflowToolbar>
							<ToolbarSpacer />
							<Link text="{i18n>movieDatabaseLink}" enabled="true" target="_blank" width="" href="https://www.imdb.com/"></Link>
							<ToolbarSpacer />
						</OverflowToolbar>
					</footer>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>